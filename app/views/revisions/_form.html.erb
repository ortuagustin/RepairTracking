<%= form_with(model: [@repair, revision], local: true) do |form| %>
  <% if revision.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(revision.errors.count, "error") %> prohibited this revision from being saved:</h2>

      <ul>
      <% revision.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="row border mr-3 ml-3 mb-4 pt-4 pb-4">
    <div class="container ">
      <div class="form-group">
        <div><%= form.label :notes_form %></div>
        <div><%= form.text_area :notes, rows:"4", style:"resize:none", class:"form-control" %></div>
      </div>
    </div>
  </div>
  <div class="actions pt-4" style="text-align: center">
    <button class="btn btn-info" type="submit" @click="submit">
      <i class="fas fa-save"></i> <span> <%= (t 'revisions_form.submit') %> </span>
    </button>

     <button class="btn btn-success" type="button"> <!-- Ver funcionamiento -->
      <i class="fas fa-check-double"></i> <span> <%= (t 'revisions_form.finalize') %> </span>
    </button>

    <button class="btn btn-outline-secondary" type="button" @click.prevent="goBack">
      <i class="fas fa-arrow-left"></i> <%= (t 'customers_form.cancel') %>
    </button>
  </div>
  
  </div>
<% end %>
