<h2 class="text-center"> <%= t 'login_form.title' %> </h2>

<div class="container pt-5">
  <%= form_for(:user, url: user_session_path) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group row mt-3">
      <%= f.label :email, (t 'login_form.email_field'), class: "col-sm-3 col-form-label" %>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, (t 'login_form.password_field'), class: "col-sm-3 col-form-label" %>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="text-center mt-5">
      <%= f.submit (t 'login_form.submit'), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
