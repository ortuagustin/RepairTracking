<%= form_with(model: piece, local: true) do |form| %>
  <% if piece.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(piece.errors.count, "error") %> prohibited this piece from being saved:</h2>

      <ul>
      <% piece.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row border mr-3 ml-3 mb-4 pt-4 pb-4">
<div class="container ">
    <div class="form-group">
      <div><%= form.label :name %> (*)</div>
      <div><%= form.text_field :name, class:"form-control" %></div>
    </div>
    <div class="form-group">
        <div><%= form.label :description %></div>
        <div><%= form.text_area :description, rows:"4", style:"resize:none", class:"form-control" %></div>
    </div>  
</div>
</div>
<div class="actions" style="text-align: center">
      <button class="btn btn-info" type="submit">
        <i class="fas fa-save"></i> <span> <%= (t 'pieces_form.submit') %> </span>
      </button>

      <a href="<%= pieces_path%>" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> <%= (t 'pieces_form.cancel')%>
      </a>
</div>

<% end %>
