<h1 class="mt-3 mb-4"><%= (t 'artifacts.index.title') %></h1>

<a class="btn btn-outline-info mb-5" href="<%= new_customer_path %>">
  <i class="fas fa-user-plus"></i>
  <span class="ml-1"><%= t 'artifacts.index.new' %></span>
</a>

<% if @artifacts.empty? %>
  <div class="text-center text-muted">
    <i class="fas fa-user-slash fa-5x mt-5"></i>
    <p class="mt-3"><%= t 'artifacts.index.empty' %></p>
  </div>
<% else %>
  <table class="table table-bordered">
    <thead>
      <tr style="background-color:rgba(128, 128, 128, 0.3)">
        <th scope="col"> <div class="text-center"> <%= t 'activerecord.attributes.artifact.id' %> </div> </th>
        <th scope="col"> <div class="text-center"> <%= t 'activerecord.attributes.artifact.name' %> </div> </th>
        <th scope="col"> <div class="text-center"> <%= t 'activerecord.attributes.artifact.model' %> </div> </th>
        <th scope="col" colspan="2"> <div class="text-center"> <%= t 'view.index.actions' %> </div> </th>
      </tr>
    </thead>

    <tbody>
      <% @artifacts.each do |artifact| %>
        <tr align="center">
          <td> <div class="text-center"> <%= artifact.id %> </div> </td>
          <td> <div class="text-center"> <%= link_to artifact.name, artifact %> </div> </td>
          <td> <div class="text-center"> <%= link_to artifact.model, artifact %> </div> </td>
          <td style="border-right:0; width: 8%;">
            <a class="btn btn-outline-warning" href="<%= edit_artifact_path(artifact) %>">
              <i class="fas fa-pencil-alt"></i>
            </a>
          </td>

          <td style="border-left:0; width: 8%;">
            <delete-button
              url="<%= artifact_path(artifact) %>"
              title="<%= t 'artifacts.actions.delete.title' %>"
              text="<%= t 'artifacts.actions.delete.text', name: artifact.name, model: artifact.model %>"
              type="<%= 'btn btn-danger' %>"
              confirm-button="<%= t 'artifacts.actions.delete.confirm' %>"
              cancel-button="<%= t 'artifacts.actions.delete.cancel' %>"
            >
            </delete-button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @artifacts, theme: 'twitter-bootstrap-4', pagination_class: 'pagination-md justify-content-center' %>
<% end %>
