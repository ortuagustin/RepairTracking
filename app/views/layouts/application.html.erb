<!DOCTYPE html>
<html>
<head>
  <title>RepairTracking</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <%= render 'layouts/navbar' %>

  <div class="container">
    <% if notice.present? %>
      <p class="notice">
        <%= notice %>
      </p>
    <% end %>

    <% if alert.present? %>
      <p class="alert">
        <%= alert %>
      </p>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
