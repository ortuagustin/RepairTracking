<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div class="ml-3">
      <ul class="text-danger font-weight-bold">
        <% customer.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row border mr-3 ml-3 mb-5 pt-4 pb-5">
    <div class="col-6 container ">
    <div class="form-group">
      <div><%= form.label :surname %> (*)</div>
      <div><%= form.text_field :surname, class:"form-control" %></div>
    </div>

    <div class="form-group">
      <div><%= form.label :name %> (*)</div>
      <div><%= form.text_field :name, class:"form-control" %></div>
    </div>

    <div class="form-group">
      <div><%= form.label :phone %> (*)</div>
      <div><%= form.text_field :phone, placeholder: '(xxx)-xxx-xxxx', class:"form-control" %></div>
    </div>

    <div class="form-group">
      <div><%= form.label :email %> (*)</div>
      <div><%= form.text_field :email, placeholder: 'ejemplo@ejemplo.com', class:"form-control" %></div>
    </div>
    <span>(*) Datos obligatorios. </span>
  </div>

  <div class="col-6 container">
    <div class="form-group">
        <div><%= form.label :notes %></div>
        <div><%= form.text_area :notes, rows:"6", style:"resize:none", class:"form-control" %></div>
    </div>

    <% if params[:go_to_repair] %>
      <%= hidden_field_tag 'go_to_repair', value: true %>
    <% end %>

    <div class="actions pt-4" style="text-align: center">
      <button class="btn btn-info" type="submit">
        <i class="fas fa-save"></i> <span> <%= (t 'customers_form.submit') %> </span>
      </button>

      <a href="<%= customers_path%>" class="btn btn-outline-secondary">
          <i class="fas fa-arrow-left"></i> <%= (t 'customers_form.cancel')%>
        </a>
    </div>
  </div>
</div>


<% end %>
